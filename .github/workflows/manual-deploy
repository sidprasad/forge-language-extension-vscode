name: Manual Open VSX Publish

on:
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: 19
      - run: npm ci
      - run: npm run compile
      - name: Publish to Open VSX
        uses: HaaLeo/publish-vscode-extension@v1
        with:
          packagePath: .
          ovsxToken: ${{ secrets.OPENVSX_TOKEN }}
